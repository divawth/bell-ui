<Dialog
  mask
  ref="dialog"
  width="{{width}}"
  title="{{title}}"
  maskClosable="{{false}}"
  closable="{{closable}}"
  className="${prefix}modal"
>

  <template slot="content">
    {{content}}
  </template>

  <template slot="footer">
    <Button
      type="{{cancelType}}"
      on-click="cancel()"
    >
      {{cancelText}}
    </Button>
    <Button
      type="{{okType}}"
      on-click="ok()"
    >
      {{okText}}
    </Button>
  </template>

</Dialog>