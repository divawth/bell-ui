@import '../../../env'

$divider-horizontal-gap = 12px
$divider-vertical-gap = 8px
$divider-text-gap = 10px

{$selector-prefix + '-divider'}
  box-sizing border-box
  background-color $brand-divider

{$selector-prefix + '-divider-horizontal'}
  display block
  clear both
  width 100%
  height 1px
  margin $divider-horizontal-gap 0

{$selector-prefix + '-divider-vertical'}
  display inline-block
  vertical-align middle
  position relative
  width 1px
  height .9em
  top -.06em
  margin 0 $divider-vertical-gap

{$selector-prefix + '-divider-text'}
  margin 0 $divider-text-gap

{$selector-prefix + '-divider-dashed'}
  background-color transparent
  border-top 1px dashed $brand-divider

{$selector-prefix + '-divider-with-text'}

  display table
  white-space nowrap
  background-color transparent
  border-top 0

  color $brand-title
  font-size $font-size-default
  font-weight 500

  &:before,
  &:after
    content ''
    position relative
    display table-cell
    border-top 1px solid $brand-divider
    transform translateY(50%)
    top 50%
    width 50%

  &{$selector-prefix + '-divider-dashed'}
    &:before,
    &:after
      border-top-style dashed

  &{$selector-prefix + '-divider-left'}
    &:before
      width 5%
    &:after
      width 95%

  &{$selector-prefix + '-divider-right'}
    &:before
      width 95%
    &:after
      width 5%