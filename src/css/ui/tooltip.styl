{$selector-tooltip}

  position relative
  display inline-block
  vertical-align middle

  &{$selector-hover}
    {$selector-tooltip-popper}
      display block
      opacity 0

  &.bell-show
    {$selector-tooltip-popper}
      display block
      opacity 1

  {$selector-tooltip-popper}

    position absolute
    line-height 1.2
    display none
    transition opacity 0.3s

    font-size $tooltip-font-size
    z-index $zindex-tooltip

    ui-scrollbar()

    &{$selector-tooltip}-disabled
      display none

    {$selector-tooltip}-arrow
      position absolute
      width 0
      height 0
      border $tooltip-arrow-border-width solid transparent

    {$selector-tooltip}-inner
      text-align left
      text-decoration none
      white-space nowrap
      overflow-y auto
      overflow-x auto

      max-width $tooltip-inner-max-width
      padding $tooltip-inner-padding
      color $tooltip-inner-color
      background-color $tooltip-inner-background-color
      border-radius $tooltip-inner-border-radius
      box-shadow $tooltip-inner-box-shadow

    &[data-placement="bottom"]
      left 50%
      padding $tooltip-placement-bottom-padding

      {$selector-tooltip-arrow}
        top $tooltip-placement-bottom-arrow-top
        left $tooltip-placement-bottom-arrow-left
        margin-left $tooltip-placement-bottom-arrow-margin-left
        border-bottom-color $tooltip-placement-bottom-arrow-border-bottom-color

    &[data-placement="bottom-start"]
      left 0
      padding $tooltip-placement-bottom-start-padding

      {$selector-tooltip-arrow}
        top $tooltip-placement-bottom-start-arrow-top
        left $tooltip-placement-bottom-start-arrow-left
        border-bottom-color $tooltip-placement-bottom-start-arrow-border-bottom-color

    &[data-placement="bottom-end"]
      right 0
      padding $tooltip-placement-bottom-end-padding

      {$selector-tooltip-arrow}
        right $tooltip-placement-bottom-end-arrow-right
        top $tooltip-placement-bottom-end-arrow-top
        border-bottom-color $tooltip-placement-bottom-end-arrow-border-bottom-color

    &[data-placement="top"]
      left 50%
      top 0
      padding $tooltip-placement-top-padding

      {$selector-tooltip-arrow}
        left $tooltip-placement-top-arrow-left
        bottom $tooltip-placement-top-arrow-bottom
        margin-left $tooltip-placement-top-arrow-margin-left
        border-top-color $tooltip-placement-top-arrow-border-top-color

    &[data-placement="top-start"]
