      top 0
      padding $tooltip-placement-top-start-padding

      {$selector-tooltip-arrow}
        left $tooltip-placement-top-start-arrow-left
        bottom $tooltip-placement-top-start-arrow-bottom
        border-top-color $tooltip-placement-top-start-arrow-border-top-color

    &[data-placement="top-end"]
