{$selector-radio-group}

    display inline-block
    user-select none
    ui-radio-group()
    margin-right - $radio-margin-gap

    {$selector-radio}

        cursor $cursor-clickable
        margin-right $radio-margin-gap

        {$selector-radio}-wrapper

            position absolute
            width $radio-inner-size
            height $radio-inner-size
            margin-top $radio-wrapper-margin-top

        {$selector-radio}-inner

            position absolute
            border-radius 100%
            width $radio-inner-size
            height $radio-inner-size
            border 1px solid
            transition color .3s, box-shadow .3s

            &:after

                display inline-block
                content ' '
                border-radius 100%

                ui-fullscreen(absolute)
                width 2px
                height 2px
                margin auto
                opacity 0
                transform scale(0)
                border 1px solid


        {$selector-radio}-input

            opacity 0

        {$selector-radio}-label

            font-size $radio-font-size
            line-height $radio-font-size
            padding-left $radio-label-padding-left

        &{$selector-active}

            {$selector-radio}-inner

                &:after

                    opacity 1
                    transform scale(4)
                    transition transform .3s, opacity .3s

        &{$selector-radio}-disabled

            cursor $cursor-disabled

            span,
            input

                cursor $cursor-disabled

{$selector-radio}-vertical

    margin-bottom - $radio-margin-gap

    {$selector-radio}

        width 100%
        display block
        margin-bottom $radio-margin-gap

