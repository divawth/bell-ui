{$selector-checkbox}

    user-select none
    display inline-block
    cursor $cursor-clickable
    position relative

    ui-checkbox()

    + {$selector-checkbox}

        margin-left $checkbox-gap

    {$selector-checkbox}-wrapper

        position absolute
        white-space nowrap
        cursor pointer
        outline 0
        width $checkbox-inner-size
        height $checkbox-inner-size

        margin-top $checkbox-inner-size - $checkbox-font-size

        &{$selector-checkbox}-active

            {$selector-checkbox-inner}

                &:after

                    transform rotate(45deg) scale(1)

    {$selector-checkbox}-inner

        display inline-block
        width $checkbox-inner-size
        height $checkbox-inner-size
        border-radius $radius-small
        border 1px solid $brand-border

        transition color .3s, background-color .3s, box-shadow .3s

        &:after

            display inline-block
            content " "
            position absolute
            top 3px
            left 5px
            width 4px
            height 8px
            border 2px solid #fff
            box-sizing border-box
            border-top 0
            border-left 0

            transform rotate(45deg) scale(0)
            transition transform .3s

    {$selector-checkbox-input}

        opacity 0
        ui-fullscreen(absolute)


    {$selector-checkbox}-label

        display inline-block
        vertical-align middle
        font-size $checkbox-font-size
        line-height $checkbox-font-size
        padding-left $checkbox-gap + $checkbox-inner-size


{$selector-checkbox}-disabled

    cursor not-allowed

    {$selector-checkbox}-wrapper

        cursor not-allowed

        {$selector-checkbox}-inner

            cursor not-allowed

    {$selector-checkbox}-label

        cursor not-allowed

{$selector-checkbox}-vertical

    display flex
    flex-direction column

    {$selector-checkbox}

        flex 1