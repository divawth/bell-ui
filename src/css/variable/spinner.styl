$selector-spinner = $selector-prefix + '-spinner'
$selector-spinner-fix = $selector-spinner + '-fix'
$selector-spinner-dot = $selector-spinner + '-dot'

$selector-spinner-mask-color = rgba(255,255,255,.8)
$spinner-brand-hash = {
  '': {
    bg-color: $brand-primary
  },
  'success': {
    bg-color: $brand-success
  },
  'info': {
    bg-color: $brand-info
  },
  'error': {
    bg-color: $brand-error
  },
  'warning': {
    bg-color: $brand-warning
  },
  'danger': {
    bg-color: $brand-danger
  }
}

$spinner-size-hash = {
  '': {
    width: 20px,
    height: 20px,
    font-size: 14px,
    padding: 10px,
  },
  'small': {
    width: 16px,
    height: 16px,
    font-size: 13px,
    padding: 15px,
  },
  'large': {
    width: 30px,
    height: 30px,
    font-size: 16px,
    padding: 12px,
  }
}