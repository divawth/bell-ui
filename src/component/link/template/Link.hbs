<a
class="${prefix}link
{{#if type}} ${prefix}link-{{type}}{{/if}}
{{#if size}} ${prefix}link-{{size}}{{/if}}
{{#if underline}} ${prefix}link-underline{{/if}}
{{#if disabled}} ${prefix}link-disabled{{/if}}
{{#if className}} {{className}}{{/if}}"

href="{{href || 'javascript:void(0)'}}"
{{#if target}} target="{{target}}"{{/if}}

{{#if style}}
  style="{{style}}"
{{/if}}

{{#if !href && !disabled}}
  on-click="click.link"
{{/if}}

ondragstart="return false"
>
  <slot />
</a>