<Dialog
  showMask
  ref="dialog"
  width="{{width}}"
  maskClosable="{{false}}"
  className="${prefix}modal ${prefix}modal-alert
  {{#if title}} ${prefix}modal-with-title{{/if}}"
>

  <div class="${prefix}modal-indicator">
    <Icon
      slot="icon"
      name="{{iconName}}"
      className="${prefix}modal-indicator-icon"
    />
  </div>

  {{#if title}}
    <div class="${prefix}modal-title">
      {{title}}
    </div>
  {{/if}}

  <div class="${prefix}modal-content">
    {{content}}
  </div>

  <div class="${prefix}modal-footer">
    <Button
      type="{{okType}}"
      on-click="ok()"
    >
      {{okText}}
    </Button>
  </div>

</Dialog>
