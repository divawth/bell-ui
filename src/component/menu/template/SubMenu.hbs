{{#if mode === 'inline'}}

  <div

    class="${prefix}sub-menu
    {{#if isOpen}} ${prefix}menu-open{{/if}}
    {{#if isActive}} ${prefix}menu-active{{/if}}
    {{#if className}} {{className}}{{/if}}"

    {{#if style}}
      style="{{style}}"
    {{/if}}

  >

    <div
      class="${prefix}sub-menu-title"
      {{#if !collapsed}}
        on-click="toggle('isOpen')"
        lazy-click="300"
      {{/if}}
    >
      <slot name="title" />
      {{#if !collapsed}}
        <Icon
          name="arrow-down-s-line"
          size="0"
          className="${prefix}sub-menu-arrow-icon"
        />
      {{/if}}
    </div>

    <Menu ref="menu" mode="{{mode}}" inner>
      <slot name="children" />
    </Menu>

  </div>

{{else}}

  <Popover
    placement="{{mode === RAW_HORIZONTAL ? RAW_BOTTOM : RAW_RIGHT_START}}"
    trigger="{{RAW_CUSTOM}}"
    visible="{{isOpen}}"
    gap="5"
    on-outside="handleOutsideClick()"
  >
    <div
      class="${prefix}sub-menu
      {{#if isActive}} ${prefix}menu-active{{/if}}
      {{#if className}} {{className}}{{/if}}"

      {{#if style}}
        style="{{style}}"
      {{/if}}
    >
      <div
        class="${prefix}sub-menu-title"
        {{#if !collapsed}}
          on-click="toggle('isOpen')"
          lazy-click="300"
        {{/if}}
      >
        <slot name="title" />
        {{#if !collapsed}}
          <Icon
            name="arrow-down-s-line"
            size="0"
            className="${prefix}sub-menu-arrow-icon"
          />
        {{/if}}
      </div>
    </div>

    <div
      slot="overlay"
      class="${prefix}menu-overlay
      {{#if theme}} ${prefix}menu-{{theme}}{{/if}}"
    >
      <slot name="children" />
    </div>

  </Popover>

{{/if}}