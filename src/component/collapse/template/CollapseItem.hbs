<div
class="${prefix}collapse-item
{{#if opened}} ${prefix}collapse-opened{{/if}}
{{#if disabled}} ${prefix}collapse-disabled
{{else}} ${prefix}collapse-enabled
{{/if}}
{{#if className}} {{className}}{{/if}}"

{{#if style}}
  style="{{style}}"
{{/if}}
>

  <div
    class="${prefix}collapse-header"
    {{#if !disabled}}
      on-click="click()"
    {{/if}}
  >

    {{#if @extra}}
      <div class="${prefix}collapse-extra">
        <slot name="extra" />
      </div>
    {{/if}}

    <Icon
      name="arrow-right-s-line"
      className="${prefix}collapse-arrow-icon"
    />

    {{title}}

  </div>

  <div class="${prefix}collapse-content">
    <slot />
  </div>

</div>