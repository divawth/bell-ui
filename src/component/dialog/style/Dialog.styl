@import '../../../css/brand'
@import '../../../css/size'
@import '../../../css/selector'
@import '../../../css/mixin'

$dialog-padding-horizontal = 24px

$dialog-header-padding-vertical = 16px
$dialog-body-padding-vertical = 24px

{$selector-class-prefix + '-dialog'}
  position fixed
  top 0
  right 0
  left 0
  height 100%
  display none
  z-index $zindex-dialog

{$selector-class-prefix + '-dialog-visible'}
  display block

{$selector-class-prefix + '-dialog-fade'}
  > {$selector-class-prefix + '-dialog-wrapper'}
    margin-top 0
    opacity 1

  > {$selector-class-prefix + '-dialog-mask'}
    background-color $brand-modal-bg-color

{$selector-class-prefix + '-dialog-mask'}
  position absolute
  top 0
  right 0
  bottom 0
  left 0

  user-select none
  background-color $brand-transparent-color
  transition background-color $form-control-transition-duration

{$selector-class-prefix + '-dialog-wrapper'}
  max-height 100%
  overflow hidden
  position absolute
  left 50%
  top 50%

  transform translate(-50%, -50%)
  margin-top -20px
  opacity 0

  line-height $ui-multiple-line-height
  border-radius $border-radius-default
  background-color $brand-bg
  box-shadow $brand-modal-shadow
  transition margin-top .6s cubic-bezier(.23,1,.32,1),
              opacity .6s cubic-bezier(.23,1,.32,1)

{$selector-class-prefix + '-dialog-header'}
  display flex
  justify-content space-between
  align-items center
  padding $dialog-header-padding-vertical $dialog-padding-horizontal
  border-bottom 1px solid $brand-divider

{$selector-class-prefix + '-dialog-title'}
  flex 1
  color $brand-title
  font-size $font-size-large
  font-weight $font-weight-bold

{$selector-class-prefix + '-dialog-close'}
  color $brand-close-color
  font-size $modal-close-icon-size
  line-height $modal-close-icon-size
  transition color $form-control-transition-duration
  user-select none
  ui-clickable()

  &:hover
    color $brand-close-color-hover

{$selector-class-prefix + '-dialog-body'}
  font-size $font-size-default
  padding $dialog-body-padding-vertical $dialog-padding-horizontal

{$selector-class-prefix + '-dialog-footer'}
  border-top 1px solid $brand-divider
  display flex
  justify-content flex-end
  align-items center
  padding $dialog-footer-padding-vertical $dialog-footer-padding-horizontal
