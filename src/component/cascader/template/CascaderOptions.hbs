<fragment>
  <div
    class="${prefix}cascader-options
    {{#if !options.length}} ${prefix}cascader-options-empty{{/if}}"
  >
    {{#each options:index}}
      <CascaderOption
        level="{{~/level}}"
        index="{{index}}"
        option="{{this}}"
        checked="{{this.value == ~/currentValue}}"
        checkable="{{~/multiple}}"
      />
    {{else}}
      <Empty simple>
        暂无数据
      </Empty>
    {{/each}}
  </div>
  {{#if nextOptions}}
    <CascaderOptions
      level="{{level + 1}}"
      options="{{nextOptions}}"
      value="{{value}}"
      loadData="{{loadData}}"
    />
  {{/if}}
</fragment>