@import '../../../env'

$rate-icon-gap = 8px

$rate-icon-color = #e9e9e9

$rate-brand-hash = {
  primary: {
    color: $brand-primary
  },
  success: {
    color: $brand-success
  },
  error: {
    color: $brand-error
  },
  info: {
    color: $brand-info
  },
  warning: {
    color: $brand-warning
  }
}

rate-brand-style(style)
  {$selector-class-prefix + '-rate-icon-active'}
    ui-set('color', style['color'])

{$selector-class-prefix + '-rate'}
  display inline-flex
  align-items center
  ui-connect(
    hash: $rate-brand-hash,
    each: rate-brand-style
  )

  > {$selector-class-prefix + '-icon'}
    display block

{$selector-class-prefix + '-rate-icon-full'}
  color $rate-icon-color
  position relative
  transition color $form-control-transition-duration

  + {$selector-class-prefix + '-rate-icon-full'}
    margin-left $rate-icon-gap

{$selector-class-prefix + '-rate-icon-half'}
  position absolute
  left 0
  top 0
  width 50%
  height 100%
  overflow hidden
  line-height 1
  opacity 0
  transition opacity $form-control-transition-duration

  &{$selector-class-prefix + '-rate-icon-active'}
    opacity 1

{$selector-class-prefix + '-rate-text'}
  margin-left $rate-icon-gap
  font-size $font-size-default
  color $brand-content

{$selector-class-prefix + '-rate-live'}
  > {$selector-class-prefix + '-rate-icon-full'}
    ui-clickable()