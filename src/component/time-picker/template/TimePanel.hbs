<div
class="${prefix}time-picker-panel
{{#if className}} {{className}}{{/if}}"

{{#if style}}
  style="{{style}}"
{{/if}}
>
  <div class="${prefix}time-picker-panel-columns">
    <ul
      ref="hourList"
      class="${prefix}time-picker-panel-column"
    >
      {{#each hourList:index}}
        <li
          key="{{this}}"
          class="${prefix}time-picker-panel-row
          {{#if index === ~/hourIndex}} ${prefix}time-picker-panel-row-active{{/if}}"
          on-click="handleHourClick(index)"
        >
          {{leftPad(this)}}
        </li>
      {{/each}}
    </ul>
    <ul
      ref="minuteList"
      class="${prefix}time-picker-panel-column"
    >
      {{#each minuteList:index}}
        <li
          key="{{this}}"
          class="${prefix}time-picker-panel-row
          {{#if index === ~/minuteIndex}} ${prefix}time-picker-panel-row-active{{/if}}"
          on-click="handleMinuteClick(index)"
        >
          {{leftPad(this)}}
        </li>
      {{/each}}
    </ul>
    {{#if secondList.length > 0}}
      <ul
        ref="secondList"
        class="${prefix}time-picker-panel-column"
      >
        {{#each secondList:index}}
          <li
            key="{{this}}"
            class="${prefix}time-picker-panel-row
            {{#if index === ~/secondIndex}} ${prefix}time-picker-panel-row-active{{/if}}"
            on-click="handleSecondClick(index)"
          >
            {{leftPad(this)}}
          </li>
        {{/each}}
      </ul>
    {{/if}}
  </div>
  <div class="${prefix}time-picker-panel-footer">
    <Button
      size="small"
      type="primary"
      disabled="{{!hasValue}}"
      on-click="handleSubmitClick()"
    >
      确定
    </Button>
  </div>
</div>