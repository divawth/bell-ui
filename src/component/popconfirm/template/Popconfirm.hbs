<Popover
  ref="popover"
  placement="{{placement}}"
  trigger="{{RAW_CLICK}}"
  visible="{{isVisible}}"
  showArrow
>
  <slot />

  <div
    slot="overlay"
    class="${prefix}popconfirm
    {{#if status}} ${prefix}popconfirm-{{status}}{{/if}}
    {{#if showIcon}} ${prefix}popconfirm-with-icon{{/if}}
    {{#if className}} {{className}}{{/if}}"

    {{#if style}}
      style="{{style}}"
    {{/if}}
  >
    <div
      class="${prefix}popover-content"
      {{#if contentStyle}}
        style="{{contentStyle}}"
      {{/if}}
    >

      {{#if showIcon}}
        <div class="${prefix}popconfirm-indicator">
          <Icon
            name="{{iconName}}"
          />
        </div>
      {{/if}}

      <div class="${prefix}popconfirm-title">
        {{title}}
      </div>

      <div class="${prefix}popconfirm-footer">
        <Button
          autoFocus
          size="small"
          on-click="onCancelClick()"
        >
          {{cancelText}}
        </Button>
        <Button
          size="small"
          type="{{okType || status}}"
          on-click="onOkClick()"
        >
          {{okText}}
        </Button>
      </div>

    </div>
    <div class="${prefix}popover-arrow"></div>
  </div>
</Popover>