<div
class="${prefix}closeable
{{#if showClose === RAW_ALWAYS}} ${prefix}closeable-show-always
{{else if showClose === RAW_HOVER}} ${prefix}closeable-show-hover
{{/if}}
{{#if className}} {{className}}{{/if}}"

{{#if draggable}}
  draggable
{{/if}}

{{#if style}}
  style="{{style}}"
{{/if}}
>
  <slot />
  {{#if needClose}}
    <Icon
      className="${prefix}closeable-icon"
      name="close-circle-fill"
      on-click.native="close.closeable"
    />
  {{/if}}
</div>