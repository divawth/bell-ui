$closeable-icon-size = 20px

{$selector-class-prefix + '-closeable'}
  display inline-block
  position relative

{$selector-class-prefix + '-closeable-show-always'},
{$selector-class-prefix + '-closeable-show-hover'}:hover
  > {$selector-class-prefix + '-closeable-icon'}
    display block

{$selector-class-prefix + '-closeable-icon'}
  display none
  border-radius 50%
  color $brand-close-color
  background-color $brand-white
  font-size $closeable-icon-size
  position absolute
  right -0.5 * $closeable-icon-size
  top -0.5 * $closeable-icon-size
  z-index $zindex-normal
  box-shadow $brand-icon-shadow
  transition color $form-control-transition-duration
  user-select none
  ui-clickable()

  &:hover
    color $brand-close-color-hover
