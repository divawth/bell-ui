@import '../../../env'

$carousel-indicator-gap = 15px

{$selector-class-prefix + '-carousel'}
  display block
  position relative
  overflow hidden
  line-height 0

{$selector-class-prefix + '-carousel-list'}
  display flex
  width 100%
  height 100%

{$selector-class-prefix + '-carousel-item'}
  display block
  position relative
  width 100%
  height 100%
  flex-shrink 0
  overflow hidden

{$selector-class-prefix + '-carousel-indicator'}
  display flex
  justify-content center
  gap 8px

  position absolute

{$selector-class-prefix + '-carousel-indicator-top'}
  top $carousel-indicator-gap

{$selector-class-prefix + '-carousel-indicator-right'}
  right $carousel-indicator-gap

{$selector-class-prefix + '-carousel-indicator-bottom'}
  bottom $carousel-indicator-gap

{$selector-class-prefix + '-carousel-indicator-left'}
  left $carousel-indicator-gap

{$selector-class-prefix + '-carousel-indicator-item'}
  background-color #fff
  opacity 0.3
  transition all .3s
  ui-clickable()

  &:hover
    opacity 0.75

{$selector-class-prefix + '-carousel-indicator-item-active'}
  opacity 1

{$selector-class-prefix + '-carousel-indicator-line'}

  > {$selector-class-prefix + '-carousel-indicator-item'}
    border-radius 2px

{$selector-class-prefix + '-carousel-indicator-dot'}
  > {$selector-class-prefix + '-carousel-indicator-item'}
    border-radius 4px
    width 8px
    height 8px

{$selector-class-prefix + '-carousel-horizontal'}
  > {$selector-class-prefix + '-carousel-list'}
    flex-direction row

  > {$selector-class-prefix + '-carousel-indicator'}
    flex-direction row
    left 0
    right 0

  > {$selector-class-prefix + '-carousel-indicator-line'} > {$selector-class-prefix + '-carousel-indicator-item'}
    width 12px
    height 4px

    &{$selector-class-prefix + '-carousel-indicator-item-active'}
      width 24px

{$selector-class-prefix + '-carousel-vertical'}
  > {$selector-class-prefix + '-carousel-list'}
    flex-direction column

  > {$selector-class-prefix + '-carousel-indicator'}
    flex-direction column
    top 0
    bottom 0

  > {$selector-class-prefix + '-carousel-indicator-line'} > {$selector-class-prefix + '-carousel-indicator-item'}
    width 4px
    height 12px

    &{$selector-class-prefix + '-carousel-indicator-item-active'}
      height 24px