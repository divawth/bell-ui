@import '../../../env'

{$selector-class-prefix + '-space'}
  display inline-flex

  > {$selector-class-prefix + '-button'}
    margin-left 0

{$selector-class-prefix + '-space-vertical'}
  flex-direction column

  > {$selector-class-prefix + '-button-block'},
  > {$selector-class-prefix + '-select-block'}
    margin-top 0

{$selector-class-prefix + '-space-align-center'}
  align-items center

{$selector-class-prefix + '-space-align-start'}
  align-items flex-start

{$selector-class-prefix + '-space-align-end'}
  align-items flex-end

{$selector-class-prefix + '-space-auto-wrap'}
  flex-wrap wrap

{$selector-class-prefix + '-space-block'}
  display flex

{$selector-class-prefix + '-space-item'}
  line-height 0