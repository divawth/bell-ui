@import '../../../env'

$skeleton-header-content-gap = 16px

{$selector-class-prefix + '-skeleton'}
  display block

{$selector-class-prefix + '-skeleton-with-image'}
  ui-table-faker()

  {$selector-class-prefix + '-skeleton-header'}
  {$selector-class-prefix + '-skeleton-content'}
    display table-cell
    vertical-align top

{$selector-class-prefix + '-skeleton-image-circle'}
  border-radius 50%

{$selector-class-prefix + '-skeleton-image-round'}
  border-radius $border-radius-default

{$selector-class-prefix + '-skeleton-image'},
{$selector-class-prefix + '-skeleton-text-row'}
  background-color $brand-skeleton-light

{$selector-class-prefix + '-skeleton-text-row'}
  height $skeleton-row-height
  border-radius $border-radius-default

  + {$selector-class-prefix + '-skeleton-text-row'}
    margin-top $skeleton-row-height

{$selector-class-prefix + '-skeleton-header'}
  padding-right $skeleton-header-content-gap

  + {$selector-class-prefix + '-skeleton-content'}
    width 100%

{$selector-class-prefix + '-skeleton-text'}
  list-style none
  margin 0
  padding 0



@keyframes {$selector-animation-prefix + '-skeleton-loading'}
  0%
    background-position 100% 50%

  to
    background-position 0 50%

{$selector-class-prefix + '-skeleton-active'}
  {$selector-class-prefix + '-skeleton-image'},
  {$selector-class-prefix + '-skeleton-text-row'}
    background linear-gradient(90deg, $brand-skeleton-light 25%, $brand-skeleton-dark 37%, $brand-skeleton-light 63%)
    background-size 400% 100%
    animation bell-skeleton-loading 1.4s ease infinite