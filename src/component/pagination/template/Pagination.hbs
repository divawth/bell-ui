<div
class="${prefix}pagination
{{#if size}} ${prefix}pagination-{{size}}{{/if}}
{{#if hideOnSinglePage && count <= 1}} ${prefix}pagination-hidden{{/if}}
{{#if className}} {{className}}{{/if}}"

{{#if style}}
  style="{{style}}"
{{/if}}
>

  {{#partial prevPage}}
    {{#if hasSlot('prev')}}

      <div
        key="prev"
        class="${prefix}pagination-custom-prev
        {{#if current === 1}} ${prefix}pagination-custom-disabled{{/if}}"

        {{#if current > 1}}
          on-click="decreaseCurrent(1)"
        {{/if}}
      >
        <slot name="prev" />
      </div>

    {{else}}

      <div
        key="prev"
        class="${prefix}pagination-item ${prefix}pagination-prev
        {{#if current === 1}} ${prefix}pagination-item-disabled{{/if}}"

        {{#if current > 1}}
          on-click="decreaseCurrent(1)"
        {{/if}}
      >
        <Icon
          name="arrow-left-s-line"
          className="${prefix}pagination-icon"
        />
      </div>

    {{/if}}
  {{/partial}}

  {{#partial nextPage}}
    {{#if hasSlot('next')}}

      <div
        key="next"
        class="${prefix}pagination-custom-next
        {{#if current === count}} ${prefix}pagination-custom-disabled{{/if}}"

        {{#if current < count}}
          on-click="increaseCurrent(1)"
        {{/if}}
      >
        <slot name="next" />
      </div>

    {{else}}

      <div
        key="next"
        class="${prefix}pagination-item ${prefix}pagination-next
        {{#if current === count}} ${prefix}pagination-item-disabled{{/if}}"

        {{#if current < count}}
          on-click="increaseCurrent(1)"
        {{/if}}
      >
        <Icon
          name="arrow-right-s-line"
          className="${prefix}pagination-icon"
        />
      </div>

    {{/if}}
  {{/partial}}

  {{#if showTotal}}
    <span class="${prefix}pagination-total">
      共 {{total}} 条
    </span>
  {{/if}}

  {{#if pageSizeList.length > 0}}
    <Select
      model="pageSize"
      size="{{size}}"
      placement="{{placement}}"
    >
      {{#each pageSizeList}}
        <Option
          value="{{this.value}}"
          text="{{this.text}}"
        />
      {{/each}}
    </Select>
  {{/if}}

  {{#if simple}}

    <div class="${prefix}pagination-simple">

      {{> prevPage}}

      <Input
        ref="simpleInput"
        size="{{size}}"
        model="page"
        className="${prefix}pagination-simple-input"
      />

      <span class="${prefix}pagination-separator">
        /
      </span>

      <span class="${prefix}pagination-count">
        {{count}}
      </span>

      {{> nextPage}}

    </div>

  {{else}}

    <div class="${prefix}pagination-list">

      {{> prevPage}}

      {{#each pageList}}

        {{#if this.prev}}

          <div
            key="prev-ellipsis"
            class="${prefix}pagination-ellipsis"
            on-click="decreaseCurrent(5)"
          >
            <Icon
              name="arrow-left-s-fill"
              className="${prefix}pagination-icon"
            />
          </div>

        {{else if this.next}}

          <div
            key="next-ellipsis"
            class="${prefix}pagination-ellipsis"
            on-click="increaseCurrent(5)"
          >
            <Icon
              name="arrow-right-s-fill"
              className="${prefix}pagination-icon"
            />
          </div>

        {{else}}

          <div
            key="page{{this.value}}"
            class="${prefix}pagination-item
            {{#if this.active}} ${prefix}pagination-item-active{{/if}}"
            {{#if !this.active}}
              on-click="setCurrent(this.value)"
            {{/if}}
          >
            {{this.value}}
          </div>

        {{/if}}

      {{/each}}

      {{> nextPage}}

    </div>

  {{/if}}

  {{#if showJumper}}
    <div class="${prefix}pagination-jumper">
      <Input
        ref="jumperInput"
        placeholder="请输入页码"
        model="page"
        size="{{size}}"
        className="${prefix}pagination-jumper-input"
      />
      <Button
        size="{{size}}"
        type="primary"
        on-click="jump()"
      >
        跳转
      </Button>
    </div>
  {{/if}}

</div>