<fragment>
  <slot
    ref="trigger"
    {{#if !disabled}}
      {{#if trigger === RAW_CLICK}}
        on-click="toggleVisible()"
      {{else if trigger === RAW_HOVER}}
        on-mouseenter="enter()"
        on-mouseleave="leave()"
      {{/if}}
    {{/if}}
  />
  {{#if visible}}
    <portal>
      <slot
        name="overlay"
        ref="overlay"
        transition="overlay"
        on-click="click()"
        {{#if !disabled}}
          {{#if trigger === RAW_HOVER}}
            on-mouseenter="enter()"
            on-mouseleave="leave()"
          {{/if}}
        {{/if}}
      />
    </portal>
  {{/if}}
</fragment>