    border-bottom-color $brand-transparent-color !important
    border-right-color $brand-transparent-color !important

  > {$selector-class-prefix + '-popover-arrow'}
    right $popover-arrow-offset

{$selector-class-prefix + '-popover-left'}
  > {$selector-class-prefix + '-popover-arrow'}
    top 50%
    margin-top - $popover-arrow-size

{$selector-class-prefix + '-popover-left-start'}
  > {$selector-class-prefix + '-popover-arrow'}
    top $popover-arrow-gap

{$selector-class-prefix + '-popover-left-end'}
  > {$selector-class-prefix + '-popover-arrow'}
    bottom $popover-arrow-gap



{$selector-class-prefix + '-popover-right'},
{$selector-class-prefix + '-popover-right-start'},
{$selector-class-prefix + '-popover-right-end'}

  &{$selector-class-prefix + '-popover-with-arrow'}
    padding-left $popover-arrow-padding-inner

  > {$selector-class-prefix + '-popover-arrow'}
    border-top-color $brand-transparent-color !important
    border-left-color $brand-transparent-color !important
    border-bottom-color $brand-transparent-color !important

  > {$selector-class-prefix + '-popover-arrow'}
    left $popover-arrow-offset


