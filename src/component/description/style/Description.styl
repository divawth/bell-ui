@import '../../../env'

$description-gap = 20px
$description-header-body-gap = 20px
$description-item-gap = 16px

$description-size-hash = {
  default: {
    padding-horizontal: 20px,
    padding-vertical: 12px,
  },
  large: {
    padding-horizontal: 24px,
    padding-vertical: 16px,
  },
  small: {
    padding-horizontal: 16px,
    padding-vertical: 8px,
  }
}

description-size-style(size)
  {$selector-class-prefix + '-description-cell'}
    ui-set('padding', size['padding-vertical'] size['padding-horizontal'])

{$selector-class-prefix + '-description'}
  width 100%
  box-sizing border-box
  line-height $ui-multiple-line-height

  ui-connect(
    hash: $description-size-hash,
    each: description-size-style
  )

  + {$selector-class-prefix + '-description'}
    margin-top $description-gap

{$selector-class-prefix + '-description-header'}
  display flex
  flex-direction row
  align-items center
  margin-bottom $description-header-body-gap

{$selector-class-prefix + '-description-title'},
{$selector-class-prefix + '-description-extra'}
  white-space nowrap

{$selector-class-prefix + '-description-extra'}
  line-height 0

{$selector-class-prefix + '-description-title'}
  color $brand-title
  font-size $font-size-large
  font-weight $font-weight-bold
  width 100%

{$selector-class-prefix + '-description-table'}
  color $brand-title
  font-size $font-size-default
  ui-table()

{$selector-class-prefix + '-description-simple'}
  {$selector-class-prefix + '-description-cell'}
    padding 0

  {$selector-class-prefix + '-description-item-label'}:after
    content ':'
    position relative
    margin 0 $ui-horizontal-gap 0 2px

{$selector-class-prefix + '-description-bordered'}
  {$selector-class-prefix + '-description-table'}
    border 1px solid $brand-border

  tr + tr
    border-top 1px solid $brand-divider

  td + td
    border-left 1px solid $brand-divider

  {$selector-class-prefix + '-description-item-label'}
    background-color $brand-bg-light
    width 1px

{$selector-class-prefix + '-description-cell'}
  line-height $ui-multiple-line-height

{$selector-class-prefix + '-description-item-wrapper'}
  display flex
  padding-bottom $description-item-gap

{$selector-class-prefix + '-description-item-label'}
  white-space nowrap

{$selector-class-prefix + '-description-item-content'}
  word-break break-all

{$selector-class-prefix + '-description-item-content-highlight'}
  background-color $brand-error-bg