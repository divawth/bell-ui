<div
class="${prefix}select-option

{{#if disabled}} ${prefix}select-option-disabled
{{else}} ${prefix}select-option-enabled
{{/if}}

{{#if isSelected}} ${prefix}select-option-active{{/if}}
{{#if className}} {{className}}{{/if}}"

{{#if style}}
  style="{{style}}"
{{/if}}

{{#if !disabled}}
  on-click="handleClick()"
{{/if}}
>
  <slot name="children">
    {{text}}
  </slot>
</div>