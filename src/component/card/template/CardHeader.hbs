<div
class="${prefix}card-header
{{#if className}} {{className}}{{/if}}"

{{#if style}}
  style="{{style}}"
{{/if}}
>

  <div class="${prefix}card-header-title">
    <slot name="title" />
  </div>

  {{#if @extra}}
    <div class="${prefix}card-header-extra">
      <slot name="extra" />
    </div>
  {{/if}}

</div>