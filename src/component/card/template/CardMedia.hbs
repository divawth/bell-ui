<div
class="${prefix}card-media
{{#if className}} {{className}}{{/if}}"

{{#if style}}
  style="{{style}}"
{{/if}}
>

  <slot />

  {{#if @title || @subTitle}}
    <div class="${prefix}card-media-info">

      {{#if @title}}
        <div class="${prefix}card-media-title">
          <slot name="title" />
        </div>
      {{/if}}

      {{#if @subTitle}}
        <div class="${prefix}card-media-sub-title">
          <slot name="subTitle" />
        </div>
      {{/if}}

    </div>
  {{/if}}

</div>