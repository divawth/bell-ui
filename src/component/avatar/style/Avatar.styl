@import '../../../env'

$avatar-bg-color = #ccc

{$selector-class-prefix + '-avatar'}
  overflow hidden
  display inline-block
  text-align center
  position relative
  background-color $avatar-bg-color
  border-radius $border-radius-default
  transition background-color .2s

  + {$selector-class-prefix + '-avatar'}
    margin-left $ui-horizontal-gap

  > {$selector-class-prefix + '-icon'}
    vertical-align middle

  > img
    width 100%
    height 100%

{$selector-class-prefix + '-avatar-image'}
  background-color transparent

{$selector-class-prefix + '-avatar-clickable'}
  ui-clickable()

// 只有 CSS3 可以缩放文本缩放
{$selector-class-prefix + '-avatar-text'}
  color $brand-white
  position absolute
  left 50%
  white-space nowrap
  transform-origin 0 center

{$selector-class-prefix + '-avatar-circle'}
  border-radius $border-radius-circle