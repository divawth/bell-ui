@import '../../../env'

$avatar-bg = #ccc

{$selector-class-prefix + '-avatar'}
  display inline-flex
  align-items center
  justify-content center
  overflow hidden
  position relative
  background-color $avatar-bg
  border-radius $border-radius-default
  transition background-color .2s

  > img
    width 100%
    height 100%

{$selector-class-prefix + '-avatar-image'}
  background-color $brand-transparent-color

{$selector-class-prefix + '-avatar-clickable'}
  user-select none
  ui-clickable()

{$selector-class-prefix + '-avatar-text'}
  color $brand-white
  position absolute
  left 50%
  white-space nowrap
  transform-origin 0 center

{$selector-class-prefix + '-avatar-circle'}
  border-radius $border-radius-circle