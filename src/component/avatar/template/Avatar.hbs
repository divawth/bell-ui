<div
class="${prefix}avatar
{{#if size && !customSize}} ${prefix}avatar-{{size}}{{/if}}
{{#if shape}} ${prefix}avatar-{{shape}}{{/if}}
{{#if src}} ${prefix}avatar-image{{/if}}
{{#if clickable}} ${prefix}avatar-clickable{{/if}}
{{#if className}} {{className}}{{/if}}"

{{#if backgroundColor || customSize || style}}
  style="{{#if backgroundColor}}background-color: {{backgroundColor}};{{/if}}
  {{#if customSize}}width: {{customSize}}px;height: {{customSize}}px;{{/if}}
  {{#if style}}{{style}}{{/if}}"
{{/if}}

{{#if clickable}}
  on-click="click"
{{/if}}
>

  {{#if url || src}}
    <img
      {{#if url}}
        src="{{formatUrl ? formatUrl({ url: url, width: customSize, height: customSize, responsive: true }) : url}}"
      {{else}}
        src="{{src}}"
      {{/if}}

      {{#if srcSet}}
        srcset="{{srcSet}}"
      {{/if}}

      {{#if alt}}
        alt="{{alt}}"
      {{/if}}
      ondragstart="return false"
      on-error="error.avatar"
    >
  {{else if hasSlot('icon')}}
    <slot name="icon" />
  {{else if text}}
    <span
      ref="text"
      class="${prefix}avatar-text"
      {{#if color || fontSize}}
        style="{{#if color}}color: {{color}};{{/if}}
        {{#if fontSize}}font-size: {{fontSize}}px;{{/if}}"
      {{/if}}
    >
      {{text}}
    </span>
  {{/if}}

</div>