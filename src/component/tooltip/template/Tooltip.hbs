<Popover
  ref="popover"
  placement="{{placement}}"
  trigger="{{mode}}"
  visible="{{isVisible}}"
  disabled="{{disabled}}"
  showDelay="{{delay}}"
  offsetX="{{offsetX}}"
  offsetY="{{offsetY}}"
  on-open="onPopoverOpen()"
  on-close="onPopoverClose()"
  on-outside="onPopoverOutside()"
  showArrow
>
  <slot />

  <div
    slot="overlay"
    class="${prefix}tooltip
    {{#if theme}} ${prefix}tooltip-{{theme}}{{/if}}
    {{#if className}} {{className}}{{/if}}"

    {{#if style}}
      style="{{style}}"
    {{/if}}
  >
    <div
      class="${prefix}popover-content"
      {{#if contentStyle}}
        style="{{contentStyle}}"
      {{/if}}
    >
      <slot name="content">
        {{content}}
      </slot>
    </div>
    <div class="${prefix}popover-arrow"></div>
  </div>
</Popover>