<i
class="${prefix}icon
{{#if name}} ${prefix}icon-{{name}}{{/if}}
{{#if spin}} ${prefix}icon-spin{{/if}}
{{#if className}} {{className}}{{/if}}"

{{#if color || size > 0 || style}}
  style="{{[
    {
      color: color || undefined,
      fontSize: size > 0 ? size + 'px' : undefined,
    },
    style
  ]}}"
{{/if}}
>
  <slot name="children" />
</i>