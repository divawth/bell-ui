<div
class="${prefix}alert
{{#if status}} ${prefix}alert-{{status}}{{/if}}
{{#if banner}} ${prefix}alert-banner{{/if}}
{{#if title}} ${prefix}alert-with-title{{/if}}
{{#if showIcon}} ${prefix}alert-with-icon{{/if}}
{{#if closable || @close}} ${prefix}alert-with-close{{/if}}
{{#if className}} {{className}}{{/if}}"

{{#if style}}
  style="{{style}}"
{{/if}}
>
  {{#if showIcon}}
    <div class="${prefix}alert-indicator">
      <Icon
        name="{{iconName}}"
      />
    </div>
  {{/if}}

  {{#if title}}
    <div class="${prefix}alert-title">
      {{title}}
    </div>
  {{/if}}

  {{#if @children}}
    <div class="${prefix}alert-content">
      <slot />
    </div>
  {{/if}}

  {{#if closable || @close}}
    <div ref="close" class="${prefix}alert-close" on-click="close.alert">
      <slot name="close">
        <Icon
          name="close-line"
          className="${prefix}alert-close-icon"
        />
      </slot>
    </div>
  {{/if}}

</div>