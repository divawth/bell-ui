@import '../../../env'

$form-item-vertical-gap = 26px
$form-item-horizontal-gap = 16px
$form-item-label-tooltip-gap = 3px
$form-item-label-wrapper-gap = 12px
$form-item-message-font-size = $font-size-small
$form-item-message-line-height = 1.5 * $form-item-message-font-size

{$selector-class-prefix + '-form'}
  display flex
  flex-direction column
  color $brand-content
  text-align left

{$selector-class-prefix + '-form-item-adaptive'}
  flex 1

{$selector-class-prefix + '-form-label-left'},
{$selector-class-prefix + '-form-label-right'}
  {$selector-class-prefix + '-form-item-label'}
    padding-right $form-item-label-wrapper-gap

{$selector-class-prefix + '-form-label-right'}
  {$selector-class-prefix + '-form-item-label'}
    justify-content flex-end

{$selector-class-prefix + '-form-item-align-top'}
  align-items flex-start

{$selector-class-prefix + '-form-item-align-middle'}
  align-items center

{$selector-class-prefix + '-form-item-align-bottom'}
  align-items flex-end

{$selector-class-prefix + '-form-item-label-required'}
  &:before
    content '*'
    font-size 80%
    font-family SimSun
    color $brand-error
    margin-right $ui-icon-text-gap

{$selector-class-prefix + '-form-item-label'}
  display flex
  justify-content flex-start
  align-items center
  font-size $ui-font-size
  height $height-default
  line-height $ui-multiple-line-height
  box-sizing border-box
  white-space nowrap

  + {$selector-class-prefix + '-form-item-wrapper'}
    margin-left 0 !important

{$selector-class-prefix + '-form-item-tooltip'}
  cursor help
  display block
  line-height 0
  margin-left $form-item-label-tooltip-gap

{$selector-class-prefix + '-form-item-wrapper'}
  flex 1
  display flex
  flex-direction column
  align-self stretch

{$selector-class-prefix + '-form-item-controls'}
  flex 1
  display flex
  flex-direction row
  align-items center
  width 100%

{$selector-class-prefix + '-form-item-extra'},
{$selector-class-prefix + '-form-item-message'}
  font-size $form-item-message-font-size
  line-height $form-item-message-line-height
  margin 0.5 * ($form-item-vertical-gap - $form-item-message-line-height) 0

{$selector-class-prefix + '-form-item-extra'}
  color $brand-muted

{$selector-class-prefix + '-form-item-message'}
  color $brand-error

{$selector-class-prefix + '-form-inline'}
  flex-direction row
  flex-wrap wrap
  align-items flex-start
  gap $form-item-horizontal-gap
  {$selector-class-prefix + '-form-item'}
    display inline-flex

{$selector-class-prefix + '-form-block'}
  {$selector-class-prefix + '-form-item'}
    display flex
    flex-direction row
    + {$selector-class-prefix + '-form-item'}
      margin-top $form-item-vertical-gap

  {$selector-class-prefix + '-form-item-with-extra'},
  {$selector-class-prefix + '-form-item-with-message'}
    + {$selector-class-prefix + '-form-item'}
      margin-top 0

{$selector-class-prefix + '-form-label-top'}
  {$selector-class-prefix + '-form-item'}
    flex-direction column

{$selector-class-prefix + '-form-colon'}
  {$selector-class-prefix + '-form-item-label'}:after
    content ':'
    margin-left 4px
