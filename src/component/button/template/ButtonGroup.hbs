<div
class="${prefix}button-group

{{#if shape}} ${prefix}button-group-{{shape}}{{/if}}
{{#if size}} ${prefix}button-group-{{size}}{{/if}}

{{#if vertical}} ${prefix}button-group-vertical
{{else}} ${prefix}button-group-horizontal
{{/if}}

{{#if className}} {{className}}{{/if}}"

{{#if style}}
  style="{{style}}"
{{/if}}
>
  <slot />
</div>