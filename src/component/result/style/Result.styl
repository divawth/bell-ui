@import '../../../env'

$result-padding-vertical = 48px
$result-padding-horizontal = 32px

$result-indicator-gap = 24px
$result-icon-size = 70px
$result-title-font-size = 24px
$result-extra-gap = 32px

result-brand-style(style)
  > {$selector-class-prefix + '-result-indicator'}
    ui-set('color', style['color'])

{$selector-class-prefix + '-result'}
  text-align center
  padding $result-padding-vertical $result-padding-horizontal
  ui-connect(
    hash: $status-brand-hash,
    each: result-brand-style
  )

{$selector-class-prefix + '-result-indicator'}
  margin-bottom $result-indicator-gap

{$selector-class-prefix + '-result-icon'}
  font-size $result-icon-size

{$selector-class-prefix + '-result-title'}
  color $brand-title
  font-size $result-title-font-size
  line-height 1.8

{$selector-class-prefix + '-result-sub-title'}
  color $brand-content
  font-size $font-size-default
  line-height 1.6

{$selector-class-prefix + '-result-extra'}
  margin-top $result-extra-gap