@import '../../../env'

$image-picker-image-size-padding = 2px 4px

{$selector-class-prefix + '-image-picker'}
  display inline-flex
  flex-wrap wrap
  line-height $ui-multiple-line-height

{$selector-class-prefix + '-image-picker-card'}
  display block
  background-color $brand-bg-light
  box-sizing content-box
  position relative
  user-select none
  border 1px solid $brand-divider
  if $border-radius-default > 0
    border-radius $border-radius-default
  &[draggable="true"]
    cursor move

{$selector-class-prefix + '-image-picker-item'} img
  ui-clickable()
  if $border-radius-default > 0
    border-radius $border-radius-default

{$selector-class-prefix + '-image-picker-contain'} img
  max-width 100%
  max-height 100%

{$selector-class-prefix + '-image-picker-stretch'} img
  width 100%
  height 100%

{$selector-class-prefix + '-image-picker-card'},
{$selector-class-prefix + '-image-picker-mask'},
{$selector-class-prefix + '-image-picker-footer'}
  display flex
  justify-content center
  align-items center

{$selector-class-prefix + '-image-picker-mask'}
  background-color $brand-text-mask-bg-color
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  if $border-radius-default > 0
    border-radius $border-radius-default

{$selector-class-prefix + '-image-picker-image-name'}
  color $brand-content
  font-size $font-size-default
  text-align center
  width 80%
  ui-ellipsis()

{$selector-class-prefix + '-image-picker-message'}
  color $brand-text-mask-title-color
  font-size $font-size-default
  text-shadow $brand-text-mask-text-shadow
  text-align center
  width 80%

{$selector-class-prefix + '-image-picker-footer'}
  position absolute
  bottom 0
  left 0
  right 0
  height 20%
  min-height 24px
  white-space nowrap
  font-size $font-size-default
  if $border-radius-default > 0
    border-bottom-left-radius $border-radius-default
    border-bottom-right-radius $border-radius-default

{$selector-class-prefix + '-image-picker-footer-enabled'}
  color $brand-text-mask-title-color
  background-color $brand-text-mask-bg-color
  transition background-color $form-control-transition-duration
  ui-clickable()
  &:hover
    background-color $brand-text-mask-bg-color-hover

{$selector-class-prefix + '-image-picker-footer-disabled'}
  color $brand-disabled
  background-color $brand-bg-disabled

{$selector-class-prefix + '-image-picker-small'}
  {$selector-class-prefix + '-image-picker-message'},
  {$selector-class-prefix + '-image-picker-footer'}
    font-size $font-size-small

{$selector-class-prefix + '-image-picker-image-size'}
  display none
  background-color $brand-text-mask-bg-color
  color $brand-white
  font-size $font-size-small
  padding $image-picker-image-size-padding
  white-space nowrap
  position absolute
  right 0
  bottom 0
  if $border-radius-default > 0
    border-bottom-right-radius $border-radius-default

{$selector-class-prefix + '-image-picker-card-show-size-always'},
{$selector-class-prefix + '-image-picker-card-show-size-hover'}{$selector-class-prefix + '-image-picker-card-mouse-enter'}
  > {$selector-class-prefix + '-image-picker-image-size'}
    display block

{$selector-class-prefix + '-image-picker-card-mouse-enter'}
  {$selector-class-prefix + '-closable-icon'}
    display block

{$selector-class-prefix + '-image-picker-card-drag-enter'}
  border-color $brand-primary-active
  box-shadow 0 0 0 $ui-shadow-radius $brand-primary-shadow
  transition all 0.1s ease-in-out