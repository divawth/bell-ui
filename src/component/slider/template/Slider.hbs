<div class="${prefix}slider

{{#if vertical}} ${prefix}slider-vertical
{{else}} ${prefix}slider-horizontal
{{/if}}

{{#if disabled}} ${prefix}slider-disabled
{{else}} ${prefix}slider-enabled
{{/if}}

{{#if block}} ${prefix}slider-block{{/if}}

{{#if thumbIsDragging}} ${prefix}slider-dragging{{/if}}

{{#if className}} {{className}}{{/if}}"

{{#if width || height || style}}
  style="{{[
    {
      width: width ? width + 'px' : undefined,
      height: height ? height + 'px' : undefined,
    },
    style
  ]}}"
{{/if}}
>

  <div
    class="${prefix}slider-track"
    {{#if !disabled}}
      on-mousedown="trackMouseDown()"
    {{/if}}
  >

    <div
      class="${prefix}slider-bar"
      style="{{
        vertical
        ? formatBarStyle(percentArray, reverse, 'bottom', 'top')
        : formatBarStyle(percentArray, reverse, 'left', 'right')
      }}"
    >
    </div>

    {{#if showStops}}
      {{#each stops}}
        <div
          key="{{this.value}}"
          class="${prefix}slider-stop"
          style="{{this.style}}"
        >
        </div>
      {{/each}}
    {{/if}}

    {{#each percentArray:index}}
      <Tooltip
        ref="{{'tooltip' + index}}"
        placement="{{~/vertical ? ~/RAW_RIGHT : ~/RAW_TOP}}"
        content="{{~/formatTooltip ? ~/formatTooltip(this.value) : this.value}}"
        mode="{{~/RAW_CUSTOM}}"
      >
        <div
          class="${prefix}slider-thumb"

          style="{{
            ~/vertical
              ? formatThumbStyle(this.percent, ~/reverse ? 'top' : 'bottom')
              : formatThumbStyle(this.percent, ~/reverse ? 'right' : 'left')
          }}"

          on-mouseenter="thumbMouseEnter($event, index)"
          on-mouseleave="thumbMouseLeave($event, index)"
          lazy-mouseenter="200"
          lazy-mouseleave="200"

          {{#if !~/disabled}}
            on-mousedown="thumbMouseDown($event, index)"
          {{/if}}

        >
        </div>
      </Tooltip>
    {{/each}}
  </div>

</div>