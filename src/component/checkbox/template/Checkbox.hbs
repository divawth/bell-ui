<label
class="${prefix}checkbox

{{#if disabled}} ${prefix}checkbox-disabled
{{else}} ${prefix}checkbox-enabled
{{/if}}

{{#if checked}} ${prefix}checkbox-checked
{{else if indeterminate}} ${prefix}checkbox-indeterminate{{/if}}
{{#if @children}} ${prefix}checkbox-with-label{{/if}}
{{#if className}} {{className}}{{/if}}"

{{#if !disabled}}
  tabindex="0"
  on-click="onClick()"
  on-focus="set('isFocus', true)"
  on-blur="set('isFocus', false)"
{{/if}}

{{#if style}}
  style="{{style}}"
{{/if}}
>
  <div class="${prefix}checkbox-icon"></div>
  <slot />
</label>