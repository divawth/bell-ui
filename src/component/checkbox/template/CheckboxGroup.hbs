<Space
className="${prefix}checkbox-group
{{#if className}} {{className}}{{/if}}"

{{#if vertical}}
  vertical
  align="start"
  size="{{CHECKBOX_GAP_VERTICAL}}"
{{else}}
  autoWrap
  align="center"
  size="{{[CHECKBOX_GAP_HORIZONTAL, CHECKBOX_GAP_VERTICAL]}}"
{{/if}}

{{#if style}}
  style="{{style}}"
{{/if}}
>
  <slot />
</Space>

