@import '../../../env'

$checkbox-icon-top = 1px
$checkbox-icon-left = 4px
$checkbox-icon-width = 4px
$checkbox-icon-height = 8px

$checkbox-indeterminate-top = 5px
$checkbox-indeterminate-left = 2px
$checkbox-indeterminate-width = 8px
$checkbox-indeterminate-height = 1px

$checkbox-gap-horizontal = 16px

{$selector-class-prefix + '-checkbox'}
  display inline-flex
  align-items center
  user-select none
  box-sizing border-box

{$selector-class-prefix + '-checkbox-with-label'}
  height $height-default
  color $brand-content
  font-size $font-size-default
  line-height $ui-single-line-height
  white-space nowrap

  > {$selector-class-prefix + '-checkbox-icon'}
    margin-right $ui-icon-text-gap

{$selector-class-prefix + '-checkbox-active'}
  > {$selector-class-prefix + '-checkbox-icon'}:after
    transform rotate(45deg) scale(1)

{$selector-class-prefix + '-checkbox-indeterminate'}
  > {$selector-class-prefix + '-checkbox-icon'}:after
    transform rotate(0deg) scale(1)

    top $checkbox-indeterminate-top
    left $checkbox-indeterminate-left
    width $checkbox-indeterminate-width
    height $checkbox-indeterminate-height

{$selector-class-prefix + '-checkbox-icon'}
  position relative
  width $font-size-default
  height $font-size-default
  border-radius $border-radius-small
  box-sizing border-box
  border 1px solid $brand-border
  background-color $brand-bg
  transition background-color 0.3s, border-color 0.3s, box-shadow 0.3s

  &:after
    content ''

    position absolute
    top $checkbox-icon-top
    left $checkbox-icon-left
    width $checkbox-icon-width
    height $checkbox-icon-height

    border 1px solid $brand-white
    box-sizing border-box
    border-top 0
    border-left 0

    transform scale(0)


{$selector-class-prefix + '-checkbox-input'}
  position absolute
  opacity 0

{$selector-class-prefix + '-checkbox-enabled'},
{$selector-class-prefix + '-checkbox-enabled'} input
  ui-clickable()

{$selector-class-prefix + '-checkbox-disabled'},
{$selector-class-prefix + '-checkbox-disabled'} input
  ui-disabled()

{$selector-class-prefix + '-checkbox-enabled'}:hover
  > {$selector-class-prefix + '-checkbox-icon'}
    border-color $brand-primary

{$selector-class-prefix + '-checkbox-active'},
{$selector-class-prefix + '-checkbox-indeterminate'}
  > {$selector-class-prefix + '-checkbox-icon'}
    background-color $brand-primary
    border-color $brand-primary

{$selector-class-prefix + '-checkbox-disabled'}
  color $brand-disabled

  > {$selector-class-prefix + '-checkbox-icon'}
    background-color $brand-bg-disabled
    border-color $brand-border

    &:after
      border-color $brand-disabled

if $ui-shadow-radius > 0
  {$selector-class-prefix + '-checkbox-focus'}
    > {$selector-class-prefix + '-checkbox-icon'}
      box-shadow 0 0 0 $ui-shadow-radius $brand-primary-shadow

{$selector-class-prefix + '-checkbox-group'}
  display inline-block

  &{$selector-class-prefix + '-checkbox-horizontal'}
    > {$selector-class-prefix + '-checkbox'}
      margin-right $checkbox-gap-horizontal

  &{$selector-class-prefix + '-checkbox-vertical'}
    > {$selector-class-prefix + '-checkbox'}
      display flex
